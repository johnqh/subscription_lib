{
  "name": "@sudobility/subscription_lib",
  "version": "0.0.13",
  "description": "Cross-platform subscription management with RevenueCat adapter pattern",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx eslint src",
    "lint:fix": "bunx eslint src --fix",
    "format": "bunx prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@revenuecat/purchases-js": "^1.0.0",
    "react-native-purchases": ">=7.0.0"
  },
  "peerDependenciesMeta": {
    "@revenuecat/purchases-js": {
      "optional": true
    },
    "react-native-purchases": {
      "optional": true
    }
  },
  "devDependencies": {
    "@revenuecat/purchases-js": "^1.1.3",
    "@types/node": "^22.0.0",
    "vitest": "^4.0.4",
    "@eslint/js": "^9.0.0",
    "@types/bun": "^1.2.8",
    "@types/react": "^19.2.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sudobility/subscription_lib.git"
  },
  "license": "MIT"
}
